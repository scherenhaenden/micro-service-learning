# Write Dockerfile to generate DB2 image and Run DB2 container
FROM ubuntu:16.04 as image
LABEL maintainer="DB2"
ENV DB2INSTANCE=db2inst1
ENV DB2INST1_PASSWORD=db2inst1-pwd
ENV LICENSE=accept
ENV DBNAME=testdb
ENV ARCHIVE_LOGS=false
ENV AUTOCONFIG=false
ENV AUTOCONFIG_LOGLEVEL=0
ENV AUTOCONFIG_LOGSIZE=0
ENV AUTOCONFIG_LOGTIME=0
ENV AUTOCONFIG_LOGARCHIVE=0
ENV AUTOCONFIG_LOGRETAIN=0
ENV AUTOCONFIG_LOGFILSIZ=0
ENV AUTOCONFIG_LOGPRIMARY=0
ENV AUTOCONFIG_LOGSECOND=0
ENV AUTOCONFIG_LOGSTDBY=0
ENV AUTOCONFIG_LOGFILPATH=0
ENV AUTOCONFIG_LOGARCHPATH=0
ENV AUTOCONFIG_LOGSTDBYPATH=0
ENV AUTOCONFIG_LOGPRIMARYPATH=0
ENV AUTOCONFIG_LOGSECONDARYPATH=0
ENV AUTOCONFIG_LOGARCHMETH1=0
ENV AUTOCONFIG_LOGARCHMETH2=0
ENV AUTOCONFIG_LOGARCHMETH3=0


docker run -itd --name mydb2 --privileged=true -p 50000:50000 -e LICENSE=accept -e DB2INST1_PASSWORD=MySuperPass -e DBNAME=testdb -v /home/edward/Development/DBs/:/database ibmcom/db2